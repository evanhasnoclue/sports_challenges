/* pages/profile/profile.wxss */
.wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.profile {
  height: 160px;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 10px 10px;
}

.upper-profile {
  width: 100%;
  height: 110px;
  display: flex;
  align-items: center;
}

.lower-profile {
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background-size: cover;
  background-position: center;
  margin-left: 20px;
}

.info {
  margin-left: 20px;
  font-size: 18px;
  color: rgb(50,50,50);
}

.score {
  margin-left: 20px;
}

.update {
  margin-right: 30px;
}