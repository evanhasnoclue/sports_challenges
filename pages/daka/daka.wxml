<!--pages/daka/daka.wxml-->
<view class='wrapper'>
  <view class='banner' style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)),url('{{challenge.photo}}');">
  </view>
  <view class='content'>
    <view class='photo-uploader'>
      <view class='font-title'>上传打卡照片</view>
      <view class='photo'>
        <image src='../../images/upload_photo1.png' class='icon' bindtap='gotoShow' />
        <button class='btn' bindtap='bindUpload'>上传图片</button>
      </view>
    </view>
    <view class='checking'>
      <checkbox-group bindchange="checkboxChange">
        <view class='checkbox'>
        <label class="checkbox-label">
        <checkbox value="{{challenge.user_id.objectId}}" checked='true' /> 
          {{challenge.user_id.username}}(组织者)
        </label>
        </view>
        <view class="checkbox" wx:for="{{bookings}}" wx:for-item="booking" >
          <label class='checkbox-label'>
          <checkbox value="{{booking.user_id.objectId}}" checked='true' /> 
          {{booking.user_id.username}}
        </label>
        </view>
      </checkbox-group>
    </view>
  </view>
</view>