/* pages/daka/daka.wxss */
.wrapper {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.form {
  height: 100%;
  width: 100%;
}

.banner {
  height: 200px;
  width: 100%;
  background-size: cover;
  background-position: center;
}

.content {
  flex-grow: 1;
  padding: 40px 10px;
}

.footer {
  height: 50px;
  width: 100%;
  background-color: rgba(255,255,255,1);
}

.bottom-fixed {
  position:fixed;
  bottom: 0;
  width: 100%;
  box-shadow:  -5px 0 5px rgba(0,0,0,0.5);
}

.layer {
  width: 85%;
  height: 100%;
  margin-top: -50px;
  background-color: rgba(255,255,255,0.5);
}