/* pages/daka/daka.wxss */
.wrapper {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.banner {
  height: 200px;
  width: 100%;
  background-size: cover;
  background-position: center;
}

.content {
  flex-grow: 1;
  padding: 0 25px;
  width: 100%;
}


.photo-uploader {
  width: 100%-50px;
  height: 200px;
  margin-top: -50px;
  padding-top: 50px;
  margin-left: 25px;
  margin-right: 25px;
  background-color: rgba(255,255,255,0.5);
}

.icon {
  width: 55px;
  height: 50px;
}