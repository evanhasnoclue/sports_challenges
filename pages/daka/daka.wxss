/* pages/daka/daka.wxss */
.wrapper {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.banner {
  height: 200px;
  width: 100%;
  background-size: cover;
  background-position: center;
}

.content {
  flex-grow: 1;
  padding: 0 25px;
  width: 100%;
}


.photo-uploader {
  width: 100%-50px;
  height: 200px;
  margin-top: -40px;
  padding-top: 50px;
  margin-left: 25px;
  margin-right: 25px;
  background-color: rgba(255,255,255,0.7);
  border-radius: 10px;
  box-shadow: 0 1px 5px rgba(0,0,0,0.3);
}

.photo {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 150px;
  width: 100%;
}

.icon {
  width: 55px;
  height: 50px;
}

.image {
  width: 80%;
  height: 100%;
}

.hidden {
  display: none;
}

.btn {
  width: 100px;
  background-color: #ea5455;
  font-size: 16px;
  color: white;
}

.checking {
  width: 100%-50px;
  margin-top: 20px;
  padding: 20px 10px;
  margin-left: 25px;
  margin-right: 25px;
  background-color: rgba(255,255,255,0.7);
  border-radius: 10px;
  box-shadow: 0 1px 5px rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.checking-part {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10px 0;
  width: 100%;
}