/**index.wxss**/

.wrapper {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100px;
}

.title {
  color: white;
  font-size: 30px;
  font-weight: bold;
  height: 20%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 30%;
}

.register {
  flex-grow: 1;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.hidden {
  display: none;
}

.btn {
  width: 100%;
  background-color: #ea5455;
  color: white;
}

.input {
  background-color: rgb(244,244,244);
  border: rgb(200,200,200);
  border-radius: 5px;
  height: 50px;
  width:250px;
  margin-bottom: 20px;
}