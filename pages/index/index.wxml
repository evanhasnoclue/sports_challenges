<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 使用微信登录 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="register">
    <form bindsubmit='bindRegister'>
      <view class='text-area'>
        <input placeholder='IT profile' name='profile' auto-height />
      </view>
      <button class="btn" form-type='submit'>进入应用</button>
      </form>
  </view>
</view>